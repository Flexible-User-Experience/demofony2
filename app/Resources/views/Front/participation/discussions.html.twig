{% extends ':Front:layout.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="well participation-well">
                    <h1 class="no-m-top"><span class="label label-transparent"><a href="{{ path('demofony2_front_participation') }}">{% trans %}front.participation.heading{% endtrans %}</a> <i class="fa fa-chevron-right"></i> {% trans %}front.participation.discussions.title{% endtrans %}</span></h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="well">
                    <img data-src="holder.js/1100x140/text:{% trans %}front.participation.discussions.title{% endtrans %}" class="img-responsive" alt="dummy">
                    <h4></h4>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-search"></i></span>
                        <input type="text" class="form-control" placeholder="cerca">
                    </div>
                    {#<h2>{% trans %}front.participation.discussions.title{% endtrans %}</h2>#}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="well">
                                {#<!-- Open Discussions -->#}
                                <span class="label label-default df-label-secondary">{% trans %}front.participation.discussions.tab.open{% endtrans %}</span>
                                {% include 'Front/includes/participation/discussions.open.html.twig' %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="well">
                                {#<!-- Close Discussions -->#}
                                <span class="label label-default df-label-secondary">{% trans %}front.participation.discussions.tab.close{% endtrans %}</span>
                                {% include 'Front/includes/participation/discussions.close.html.twig' %}
                            </div>
                        </div>
                    </div>
                    {% include ':Front/includes:pagination.html.twig' %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block footlangca %}{{ path('demofony2_front_participation_discussions', {'_locale': 'ca'}) }}{% endblock %}
{% block footlanges %}{{ path('demofony2_front_participation_discussions', {'_locale': 'es'}) }}{% endblock %}
{% block footlangen %}{{ path('demofony2_front_participation_discussions', {'_locale': 'en'}) }}{% endblock %}
