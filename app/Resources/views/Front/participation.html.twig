{% extends ':Front:layout.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="well participation-well">
                    <h1 class="no-m-top no-m-bottom"><span class="label label-transparent">{% trans %}front.participation.heading{% endtrans %}</span></h1>
                    {#<p class="lead">{% trans %}front.participation.subheading{% endtrans %}</p>#}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="well">
                    <h4 class="no-m-top">{% trans %}front.participation.calendar.title{% endtrans %}</h4>
                    <ul class="list-group">
                        <li class="list-group-item"><span class="badge">15/12/2014</span>Cras justo odio</li>
                        <li class="list-group-item"><span class="badge">17/12/2014</span>Dapibus ac facilisis in</li>
                        <li class="list-group-item"><span class="badge">17/12/2014</span>Morbi leo risus</li>
                    </ul>
                    <a class="btn btn-sm btn-primary" href="#"><i class="fa fa-calendar"></i> {% trans %}front.participation.calendar.action{% endtrans %}</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="well">
                    <h4 class="no-m-top">{% trans %}front.home.addons.tutorial.title{% endtrans %}</h4>
                    <p>{{ words(10) }}</p>
                    <a class="btn btn-sm btn-primary" href="#"><span class="glyphicon glyphicon-plus" data-aria-hidden="true"></span> {% trans %}front.home.block.more{% endtrans %}</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="well">
                    <h4 class="no-m-top">{% trans %}front.home.addons.rules.title{% endtrans %}</h4>
                    <p>{{ words(10) }}</p>
                    <a class="btn btn-sm btn-primary" href="#"><span class="glyphicon glyphicon-plus" data-aria-hidden="true"></span> {% trans %}front.home.block.more{% endtrans %}</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    <h4 class="no-m-top">{% trans %}front.participation.discussions.title{% endtrans %}</h4>
                    <div role="tabpanel">
                        {#<!-- Discussion Nav Pills -->#}
                        <ul id="ul-discussion-tabs" class="nav nav-pills nav-justified" role="tablist">
                            <li role="presentation" class="active"><a href="#discussion-open" data-aria-controls="open" role="tab" data-toggle="pill">{% trans %}front.participation.discussions.tab.open{% endtrans %}</a></li>
                            <li role="presentation"><a href="#discussion-close" data-aria-controls="close" role="tab" data-toggle="pill">{% trans %}front.participation.discussions.tab.close{% endtrans %}</a></li>
                        </ul>
                        {#<!-- Discussion Tab Panes -->#}
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="discussion-open">
                                {#<!-- Open Discussions -->#}
                                <div class="list-group no-m-bottom">
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 1<small class="pull-right">15/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 1</p>
                                    </a>
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 2<small class="pull-right">16/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 2</p>
                                    </a>
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 3<small class="pull-right">17/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 3</p>
                                    </a>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane" id="discussion-close">
                                {#<!-- Close Discussions -->#}
                                <div class="list-group no-m-bottom">
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 4<small class="pull-right">01/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 4</p>
                                    </a>
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 5<small class="pull-right">02/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 5</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="well">
                    <h4 class="no-m-top">{% trans %}front.participation.proposals.title{% endtrans %}</h4>
                    <div role="tabpanel">
                        {#<!-- Proposals Nav Pills -->#}
                        <ul id="ul-proposal-tabs" class="nav nav-pills nav-justified" role="tablist">
                            <li role="presentation" class="active"><a href="#proposal-open" data-aria-controls="open" role="tab" data-toggle="pill">{% trans %}front.participation.proposals.tab.open{% endtrans %}</a></li>
                            <li role="presentation"><a href="#proposal-close" data-aria-controls="close" role="tab" data-toggle="pill">{% trans %}front.participation.proposals.tab.close{% endtrans %}</a></li>
                        </ul>
                        {#<!-- Proposals Tab Panes -->#}
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="proposal-open">
                                {#<!-- Open Proposals -->#}
                                <div class="list-group no-m-bottom">
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 6<small class="pull-right">23/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 6</p>
                                    </a>
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 7<small class="pull-right">24/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 7</p>
                                    </a>
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 8<small class="pull-right">27/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 8</p>
                                    </a>
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 9<small class="pull-right">28/12/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 9</p>
                                    </a>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane" id="proposal-close">
                                {#<!-- Close Proposals -->#}
                                <div class="list-group no-m-bottom">
                                    <a href="#" class="list-group-item">
                                        <h4 class="list-group-item-heading">List group item heading 10<small class="pull-right">13/11/2014</small></h4>
                                        <p class="list-group-item-text">List group item long text paragraph description 10</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

