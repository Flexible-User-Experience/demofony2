{% extends ':Front:layout.html.twig' %}

{% block bodyattr %}class="participation"{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <div class="overlap">
                        <img class="img-responsive center-block" data-src="holder.js/1140x153/#7EA0B6:#7EA0B6" alt="dummy"/>
                        {% block breadcrumb %}
                            <ol class="breadcrumb">
                                <li>{{ 'front.participation.heading' | trans }}</li>
                            </ol>
                        {% endblock %}
                    </div>
                    {#<p class="lead">{% trans %}front.participation.subheading{% endtrans %}</p>#}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    <img data-src="holder.js/515x140/text:{% trans %}front.participation.discussions.title{% endtrans %}" class="img-responsive" alt="dummy">
                    <div role="tabpanel">
                        {#<!-- Discussion Nav Pills -->#}
                        <ul id="ul-discussion-tabs" class="nav nav-pills nav-justified" role="tablist">
                            <li role="presentation" class="active"><a href="#discussion-open" data-aria-controls="open" role="tab" data-toggle="pill">{% trans %}front.participation.discussions.tab.open{% endtrans %}</a></li>
                            <li role="presentation"><a href="#discussion-close" data-aria-controls="close" role="tab" data-toggle="pill">{% trans %}front.participation.discussions.tab.close{% endtrans %}</a></li>
                        </ul>
                        {#<!-- Discussion Tab Panes -->#}
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="discussion-open">
                                {#<!-- Open Discussions -->#}
                                {% include 'Front/includes/participation/discussions.open.html.twig' with { 'openDiscussions': openDiscussions } %}
                            </div>
                            <div role="tabpanel" class="tab-pane" id="discussion-close">
                                {#<!-- Close Discussions -->#}
                                {% include 'Front/includes/participation/discussions.close.html.twig' with { 'closeDiscussions': closeDiscussions } %}
                            </div>
                        </div>
                    </div>
                    <br>
                    <a class="btn btn-sm btn-primary" href="{{ path('demofony2_front_participation_discussions') }}"><i class="fa fa-list"></i> mostrar llistat complet</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="well">
                    <img data-src="holder.js/515x140/text:{% trans %}front.participation.proposals.title{% endtrans %}" class="img-responsive" alt="dummy">
                    <div role="tabpanel">
                        {#<!-- Proposals Nav Pills -->#}
                        <ul id="ul-proposal-tabs" class="nav nav-pills nav-justified" role="tablist">
                            <li role="presentation" class="active"><a href="#proposal-open" data-aria-controls="open" role="tab" data-toggle="pill">{% trans %}front.participation.proposals.tab.open{% endtrans %}</a></li>
                            <li role="presentation"><a href="#proposal-close" data-aria-controls="close" role="tab" data-toggle="pill">{% trans %}front.participation.proposals.tab.close{% endtrans %}</a></li>
                        </ul>
                        {#<!-- Proposals Tab Panes -->#}
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="proposal-open">
                                {#<!-- Open Proposals -->#}
                                {% include 'Front/includes/participation/proposals.open.html.twig' with { 'openProposals': openProposals } %}
                            </div>
                            <div role="tabpanel" class="tab-pane" id="proposal-close">
                                {#<!-- Close Proposals -->#}
                                {% include 'Front/includes/participation/proposals.close.html.twig' with { 'closeProposals': closeProposals } %}
                            </div>
                        </div>
                    </div>
                    <br>
                    <a class="btn btn-sm btn-primary" href="{{ path('demofony2_front_participation_proposals') }}"><i class="fa fa-list"></i> mostrar llistat complet</a>
                    <a class="btn btn-primary btn-sm pull-right" href="{{ path('demofony2_front_participation_proposals_new') }}"><i class="fa fa-plus-square"></i> {% trans %}front.participation.proposals.add{% endtrans %}</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="well">
                    <img data-src="holder.js/320x140/text:{% trans %}front.participation.calendar.title{% endtrans %}" class="img-responsive" alt="dummy">
                    <h4></h4>
                    {#<h3 class="no-m-top">{% trans %}front.participation.calendar.title{% endtrans %}</h3>#}
                    <ul class="list-group">
                        <li class="list-group-item"><span class="badge">15/12/2014</span>Cras justo odio</li>
                        <li class="list-group-item"><span class="badge">17/12/2014</span>Dapibus ac facilisis in</li>
                        <li class="list-group-item"><span class="badge">17/12/2014</span>Morbi leo risus</li>
                    </ul>
                    <a class="btn btn-sm btn-primary" href="{{ path('demofony2_front_participation_calendar') }}"><i class="fa fa-calendar"></i> {% trans %}front.participation.calendar.action{% endtrans %}</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="well">
                    <img data-src="holder.js/320x140/text:{% trans %}front.home.addons.tutorial.title{% endtrans %}" class="img-responsive" alt="dummy">
                    <h4></h4>
                    {#<h3 class="no-m-top">{% trans %}front.home.addons.tutorial.title{% endtrans %}</h3>#}
                    <p>{{ words(10) }}</p>
                    <a class="btn btn-sm btn-primary" href="#"><span class="glyphicon glyphicon-plus" data-aria-hidden="true"></span> {% trans %}front.home.block.more{% endtrans %}</a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="well">
                    <img data-src="holder.js/320x140/text:{% trans %}front.home.addons.rules.title{% endtrans %}" class="img-responsive" alt="dummy">
                    <h4></h4>
                    {#<h3 class="no-m-top">{% trans %}front.home.addons.rules.title{% endtrans %}</h3>#}
                    <p>{{ words(10) }}</p>
                    <a class="btn btn-sm btn-primary" href="#"><span class="glyphicon glyphicon-plus" data-aria-hidden="true"></span> {% trans %}front.home.block.more{% endtrans %}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

