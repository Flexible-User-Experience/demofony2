<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="label label-primary">{% trans %}front.home.login{% endtrans %}</span></a>
    <ul class="dropdown-menu df-dropdown-login-menu">
        <li>
            <div class="row no-m-bottom">
                <div class="col-md-12">
                    <form class="form" role="form" method="post" action="{{ path('fos_user_security_login') }}" accept-charset="UTF-8" id="login-nav">
                        <div class="form-group">
                            <label class="sr-only" for="df-main-login">{% trans %}front.email{% endtrans %}</label>
                            <input type="email" class="form-control" id="df-main-login" placeholder="{% trans %}front.email{% endtrans %}" required>
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="df-main-passwd">{% trans %}front.passwd{% endtrans %}</label>
                            <input type="password" class="form-control" id="df-main-passwd" placeholder="{% trans %}front.passwd{% endtrans %}" required>
                            <p class="help-block"><a href="{{ path('fos_user_resetting_request') }}">{% trans %}front.recovery{% endtrans %}</a></p>
                        </div>
                        {#<div class="checkbox">#}
                            {#<label>#}
                                {#<input type="checkbox"> {% trans %}front.remember{% endtrans %}#}
                            {#</label>#}
                        {#</div>#}
                        <div class="form-group no-m-bottom">
                            <button type="submit" class="btn btn-sm btn-primary">{% trans %}front.home.login{% endtrans %}</button>
                        </div>
                    </form>
                </div>
            </div>
        </li>
    </ul>
</li>